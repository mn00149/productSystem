<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../public/css/user/signupForm.css" />
    <link rel="stylesheet" href="../public/css/header.css" />
    <script src="//code.jquery.com/jquery-3.3.1.min.js"></script>

</head>

<body>
    <%- include('header') -%>

        <div class="container">
            <form method="post" class="form" id="form">
                <h2>Sign Up</h2>
                <hr />
                <div class="input-form margin-top">
                    <label for="username">이름</label>
                    <input name="username" type="text" id="username" placeholder="Enter Username" required>
                    <small>Error Message</small>
                </div>
                <div class="input-form margin-top">
                    <label for="username">부서명</label>
                    <input name="department" type="text" id="department" placeholder="부서명을 입력하세요" required>
                    <small>Error Message</small>
                </div>
                <div class="input-form margin-top">
                    <label for="username">직책</label>
                    <input name="role" type="text" id="role" placeholder="직책을 입력하세요" required>
                    <small>Error Message</small>
                </div>
                <div class="input-form margin-top">
                    <label for="username">사번</label>
                    <input name="employeeNumber" type="number" id="employeeNumber" placeholder="사번을 입력하세요" required>
                    <input type="button" value="Username Check" class="btn">
                    <small>Error Message</small>
                </div>
                <div class="input-form margin-top">
                    <label for="email">Email</label>
                    <input name="email" type="email" id="email" placeholder="Enter Email" required>
                    <input type="button" value="Email Check" class="btn" id="checkEmail">
                    <small>Error Message</small>
                </div>
                <div class="input-form margin-top">
                    <label for="password">Password</label>
                    <input name="password" type="password" id="password" placeholder="Enter Password" required>
                    <small>Error Message</small>
                </div>
                <div class="input-form margin-top">
                    <label for="password2">Confirm Password</label>
                    <input type="password" id="password2" placeholder="Enter Password again" required>
                    <small>Error Message</small>
                </div>

                <!-- <button>Register</button> -->
                <div class="location-btn margin-top">
                    <button type="button" onclick="location.href='/signinForm';"> SignIn 화면으로 </button>
                    <button type="button" id="signupBtn">Register</button>
                </div>

            </form>

        </div>
</body>
<script>
    function checkPasswordMatch(input1, input2) {
        const re = /[`~!@#$%^&*|\\\'\";:\/?]/gi;
        if(re.test(input1)){
            alert('password는 특수문자 미포함 하여야 합니다')
            return false
        }
        if (input1 !== input2) {
            alert("Password is not match")
            return false
        }
        return true
    }

    function checkEmail(input) {
        const re = /^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
        if (re.test(input.value.trim())) {
            showSuccess(input);
        } else {
            showError(input, 'Email is not valid');
        }
    }
    $("#signupBtn").click(function () {
        let username = $('#username').val();
        let password = $('#password').val();
        let password2 = $('#password2').val();
        let email = $('#email').val();
        let department = $('#department').val();
        let employeeNumber = $('#employeeNumber').val();
        let role = $('#role').val();
        employeeNumber = Number(employeeNumber);
        let data = { username, password, email, department, employeeNumber, role };

        if(checkPasswordMatch(password, password2)){

            $.post("/users/signup", data)
            .done((res) => {
                alert(res.message)
                location.href = "/signinForm";
            })
            .fail((res) => {
                alert(res.responseJSON.message)
                console.log(res)
            })
        }
    });


</script>

</html>